@{
	ViewBag.Title = "RecordList";
	Layout = null;
}
@model BillingRecord.Models.ViewModels.BillingRecordViewModel

<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-hover">
			<tr>
				<th>#</th>
				<th>類別</th>
				<th>日期</th>
				<th>金額</th>
			</tr>
			@{var index = 0;}
			@foreach (var record in Model.RecordList)
			{
				<tr>
					<td>@(++index)</td>
					<td>@record.Type</td>
					<td>@record.Date</td>
					<td>@record.Amount</td>
				</tr>
			}
		</table>
	</div>
</div>
