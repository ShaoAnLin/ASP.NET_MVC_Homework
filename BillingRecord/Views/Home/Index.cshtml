@{
	ViewBag.Title = "Home Page";
}
@model BillingRecord.Models.ViewModels.SearchRecordViewModel

<h2>記賬紀錄</h2>

@using (Html.BeginForm("MonthRecord", "Home"))
{
	<div class="container body-content">
		<div class="well">
			<div style="margin-bottom: 10px">搜尋紀錄</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Year, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.Year, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.Year, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Month, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.Month, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.Month, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-8 col-sm-4">
					<button type="submit" class="btn btn-default">搜尋</button>
				</div>
			</div>
		</div>
	</div>
}

@Html.Action("RecordList")

@section scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
