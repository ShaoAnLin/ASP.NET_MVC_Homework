@model BillingRecord.Models.ViewModels.BillingInfoViewModel

@using (Html.BeginForm())
{
	<div class="container body-content">
		<div class="well">
			<div class="form-group">
				<label for="category" class="col-sm-2 control-label">類別</label>
				<div class="col-sm-10">
					@Html.EnumDropDownListFor(e => e.Type, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<label for="money" class="col-sm-2 control-label">金額</label>
				<div class="col-sm-10">
					@Html.TextBoxFor(e => e.Amount, new { @class = "form-control", placeholder = "金額" })
				</div>
			</div>
			<div class="form-group">
				<label for="date" class="col-sm-2 control-label">日期</label>
				<div class="col-sm-10">
					@Html.TextBoxFor(e => e.Date, "0:yyyy-MM-dd", new { @class = "form-control", placeholder = "日期", @Value = DateTime.Now.ToString("yyyy-MM-dd") })
				</div>
			</div>
			<div class="form-group">
				<label for="description" class="col-sm-2 control-label">備註</label>
				<div class="col-sm-10">
					@Html.TextAreaFor(e => e.Message, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-8 col-sm-4">
					<button type="submit" class="btn btn-default">送出</button>
				</div>
			</div>
		</div>
	</div>
}
